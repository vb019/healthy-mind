<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>App de Notas</title>
  <link rel="stylesheet" href="estilosnotas.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
  <div class="container-app">
    <!-- Sidebar Desktop -->
    <aside class="sidebar solo-desktop">
      <div class="logo">(acá va el logo de healtymind)</div>
      <nav class="nav-sidebar">
        <a href="#">Notas</a>
        <a href="#">Etiquetas</a>
        <a href="#">Archivadas</a>
        <a href="#">Papelera</a>
      </nav>
    </aside>

    <!-- Contenido principal -->
    <div class="main-content">
      <!-- Header Desktop -->
      <header class="header solo-desktop">
        <input type="text" class="search-input" placeholder="Buscar en tus notas...">
        <i class="bi bi-person-circle profile-icon"></i>
      </header>

      <!-- Header Móvil -->
      <header class="mobile-header solo-mobile">
        <input type="text" placeholder="Buscar notas...">
      </header>

     <!-- Menú hamburguesa en móvil -->
      <div class="hamburger-menu solo-mobile">
        <i class="bi bi-list"></i>
      </div>

      <!-- Menú lateral móvil -->
      <nav class="mobile-nav-links solo-mobile">
        <a href="#">Notas</a>
        <a href="#">Privados</a>
        <a href="#">Etiquetas</a>
        <a href="#">Archivadas</a>
        <a href="#">Papelera</a>
      </nav>

      <!-- Notas -->
      <section class="notes-grid">
        <div class="note-card new-note">
          <span class="note-title">Título de nota...</span>
          <i class="bi bi-eye"></i>
        </div>
        <div class="note-card note-private">
          <span class="note-title">Título de nota privada...</span>
          <i class="bi bi-lock-fill"></i>
        </div>
        <div class="note-card note-unlocked">
          <span class="note-title">Título de nota...</span>
          <i class="bi bi-eye"></i>
        </div>
      </section>
    </div>
  </div>

  <!-- Botón escritorio -->
  <div class="add-note-desktop solo-desktop">
    <button class="btn-add-note"><i class="bi bi-plus-circle"></i> Añadir nota</button>
  </div>

  <!-- Botón móvil -->
  <div class="add-note-mobile solo-mobile">
    <button class="btn-add-note"><i class="bi bi-plus-circle"></i> Añadir nota</button>
  </div>

  <!-- Enlazar el archivo JavaScript -->
  <script src="js/hamburguesa.js"></script>
</body>
</html>
